%h2 My Ingredients
- if current_user == @user
  - ingredient = Ingredient.new
  = form_for  ingredient, 
              :url => user_ingredients_path(@user, ingredient), 
              :remote => true do |f|
    = f.text_field  :name
    = f.submit :value => "Add Ingredient"
    %br

#ingredients
  - @user.ingredients.each do |ingredient|
    = render(ingredient)
