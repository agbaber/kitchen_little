%h2 My Ingredients
- if current_user == @user
  - ingredient = Ingredient.new
  = form_for  ingredient, 
              :url => user_ingredients_path(@user, ingredient), 
              :remote => true do |f|
    = f.label       :name
    = f.text_field  :name
    %br
    = f.submit

%ul#ingredients
- @user.ingredients.each do |ingredient|
  %li[ingredient]
    = ingredient.name
    - if current_user == @user
      = link_to "delete", 
                user_ingredient_path(@user, ingredient), 
                :method => :delete, 
                :remote => true
